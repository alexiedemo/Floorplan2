{
  "widget_families": [
    {
      "family": "systemSmall",
      "displayName": "Quick Stats",
      "description": "Shows scan count and quick access to new scan",
      "preview_data": {
        "scan_count": 5,
        "last_scan_relative": "2h ago"
      }
    },
    {
      "family": "systemMedium", 
      "displayName": "Scanner Dashboard",
      "description": "Statistics and recent scans overview",
      "preview_data": {
        "scan_count": 12,
        "rooms_scanned": 8,
        "average_room_size": 22.5,
        "recent_scans": 3
      }
    },
    {
      "family": "systemLarge",
      "displayName": "Full Scanner Hub",
      "description": "Complete dashboard with detailed recent scans",
      "preview_data": {
        "scan_count": 25,
        "rooms_scanned": 15,
        "average_room_size": 28.3,
        "recent_scans": 5
      }
    }
  ],
  "refresh_policy": {
    "timeline_reload_policy": "after_date",
    "refresh_interval_hours": 1,
    "background_refresh": true
  },
  "url_schemes": [
    {
      "scheme": "lidarscanner",
      "actions": [
        {
          "path": "newscan",
          "description": "Start a new room scan"
        },
        {
          "path": "allscans", 
          "description": "View all saved scans"
        }
      ]
    }
  ],
  "app_group": {
    "identifier": "group.com.yourname.lidarscanner",
    "purpose": "Share scan data between main app and widget"
  }
}